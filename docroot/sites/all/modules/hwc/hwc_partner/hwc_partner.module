      '#default_value' => variable_get('hwc_partner_private_link_' . $it . '_description', ''),
    );
    $form['hwc_partner_private_link_' . $it . '_link_text'] = array(
      '#type' => 'textfield',
      '#title' => t('Link text'),
      '#size' => 60,
