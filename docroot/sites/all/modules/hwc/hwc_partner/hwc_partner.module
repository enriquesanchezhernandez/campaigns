function hwc_partner_node_form_after_build_hide_hints($form, &$form_state) {
  if (!empty($form['body'][LANGUAGE_NONE][0]['format'])) {
    $form['body'][LANGUAGE_NONE][0]['format']['#attributes']['class'][] = 'hidden';
  }
  return ($form);
}
